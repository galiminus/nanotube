<div class="columns">
  <div class="column is-one-quarter is-offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card">
      <%= error_messages_for(resource) %>
      <div class="card-content">
	<div class="content">

	  <div class="field">
	    <%= f.label :username, class: "label" %>
	    <div class="control">
	      <%= f.text_field :username, autofocus: true, class: "input" %>
	     </div>
	  </div>

	  <div class="field">
	    <%= f.label :password, class: "label" %>
	    <div class="control">
	      <%= f.password_field :password, autocomplete: "off", class: "input" %>
	    </div>
	  </div>

	  <div class="field">
	    <div class="control">
	      <label class="checkbox">
		<%= f.check_box :remember_me %>
		Remember me
	      </label>
	    </div>
	  </div>
	</div>
      </div>
      
      <footer class="card-footer">
	<p class="card-footer-item">
	  <%= link_to "Sign up", new_registration_path(resource_name), class: "button is-link" %>
	</p>
	<p class="card-footer-item">
	  <%= f.submit "Sign in", class: "button is-primary" %>
	</p>
      </footer>

    </div>
    <% end %>
  </div>
</div>

