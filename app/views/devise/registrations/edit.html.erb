<div class="columns">
  <div class="column is-one-quarter is-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, multipart: true) do |f| %>
    <div class="card">
      <%= error_messages_for(resource) %>
      <div class="card-content">
	<div class="content">

	  <div class="field">
	    <%= f.label :username, class: "label" %>
	    <div class="control">
	      <%= f.text_field :username, autofocus: true, class: "input", required: true %>
	     </div>
	  </div>

	  <div class="field">
	    <%= f.label :password, class: "label" %>
	    <div class="control">
	      <%= f.password_field :password, autocomplete: "off", class: "input" %>
	    </div>
	    <p class="help">Leave blank if you don't want to change it.</p>
	  </div>

	  <div class="field">
	    <%= f.label :password_confirmation, class: "label" %>
	    <div class="control">
	      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
	    </div>
	  </div>

	  <div class="field">
	    <%= f.label :avatar, class: "label" %>
	    <div class="control">
	      <%= f.file_field :avatar %>
	    </div>
	  </div>
	</div>
      </div>

      <footer class="card-footer">
	<p class="card-footer-item">
	  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
	</p>
	<p class="card-footer-item">
	  <%= f.submit "Update", class: "button is-primary" %>
	</p>
      </footer>
    </div>
    <% end %>
  </div>
</div>
